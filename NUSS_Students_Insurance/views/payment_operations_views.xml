<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id='in_payment_operation_view_form' model='ir.ui.view'>
        <field name="name">in.payment.operation.view.form</field>
        <field name="model">in.payment.operation</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0" string="Payment Operation" class="o_module_form">
                <header>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="transaction_id" readonly="1"/>
                            <field name="customer_MSISDN" readonly="1"/>
                            <field name="merchant_MSISDN" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount" readonly="1"/>
                            <field name="token" readonly="1"/>
                            <field name="transaction_time" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='payment_operations_view_tree' model='ir.ui.view'>
        <field name="name">in.payment.operation.view.tree</field>
        <field name="model">in.payment.operation</field>
        <field name="arch" type="xml">
            <tree string="Payment Operations" editable="bottom" create="false" delete="false">
                <field name="transaction_id" readonly="1"/>
                <field name="customer_MSISDN" readonly="1"/>
                <field name="merchant_MSISDN" readonly="1"/>
                <field name="amount" readonly="1"/>
                <field name="token" readonly="1"/>
                <field name="transaction_time" readonly="1"/>
                <field name="state" readonly="1" decoration-danger="state == 'pending'"
                       decoration-success="state == 'paid'" widget="badge"/>
            </tree>
        </field>
    </record>
</odoo>