<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='expenses_management_company_view_form' model='ir.ui.view'>
        <field name="name">expenses.management.company.view.form</field>
        <field name="model">expenses.management.company</field>
        <field name="arch" type="xml">
            <form string="Expenses Management Company">
                    <sheet>
                        <field name="image_256" widget="image" class="oe_avatar" options="{'preview_image': 'image_256'}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="quadruple_phone"/>
                                <field name="phone" widget="phone" options="{'enable_sms': true}"/>
                                <field name="university_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="mobile_phone" widget="phone" options="{'enable_sms': true}"/>
                                <field name="website" string="Website" widget="url" placeholder="e.g. https://www.example.com"/>
                                <field name="medical_network_file" filename="medical_network_filename"/>
                                <field name="medical_network_filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
        </field>
    </record>

    <record id='expenses_management_company_view_tree' model='ir.ui.view'>
        <field name="name">expenses.management.company.view.tree</field>
        <field name="model">expenses.management.company</field>
        <field name="arch" type="xml">
            <tree string="Expenses Management Company">
                <field name="name"/>
                <field name="quadruple_phone"/>
                <field name="phone"/>
                <field name="mobile_phone"/>
                <field name="website"/>
            </tree>
        </field>
    </record>
</odoo>