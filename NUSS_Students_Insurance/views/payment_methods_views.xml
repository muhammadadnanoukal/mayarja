<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='in_payment_method_view_form' model='ir.ui.view'>
        <field name="name">in.payment.method.view.form</field>
        <field name="model">in.payment.method</field>
        <field name="arch" type="xml">
            <form string="Payment Methods">
                    <sheet>
                        <field name="image_256" widget="image" class="oe_avatar" options="{'preview_image': 'image_256'}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="e_payment_link"/>
                                <field name="ms_type" attrs="{'invisible': [('type', '=', 'bank')], 'required': [('type', '!=', 'bank')]}" widget="radio"/>
                                <field name="active_account" attrs="{'invisible': [('type', '=', 'bank')], 'required': [('type', '!=', 'bank')]}" widget="boolean_toggle"/>
                            </group>
                            <group attrs="{'invisible': [('type', '!=', 'bank')]}">
                                <field name="account_number"/>
                            </group>
                        </group>
                        <group>
                            <group string="Merchant Account">
                                <field name="merchant_username"/>
                                <field name="merchant_password" password="True"/>
                                <field name="mobile" widget="phone" options="{'enable_sms': true}" attrs="{'invisible': [('type', '=', 'bank')], 'required': [('type', '!=', 'bank')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
        </field>
    </record>

    <record id='expenses_management_company_view_tree' model='ir.ui.view'>
        <field name="name">in.payment.method.view.tree</field>
        <field name="model">in.payment.method</field>
        <field name="arch" type="xml">
            <tree string="Payment Methods">
                <field name="name"/>
                <field name="type"/>
                <field name="merchant_username"/>
            </tree>
        </field>
    </record>
</odoo>