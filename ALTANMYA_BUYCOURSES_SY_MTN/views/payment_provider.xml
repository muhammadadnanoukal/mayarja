<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">syriatell Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='provider_creation_warning']" position="after">
                <div class="alert alert-danger"
                     role="alert"
                     attrs="{'invisible': [('code', '!=', 'syriatell')]}">
                    This provider is deprecated.
                    Consider disabling it and moving to <strong>syriatell</strong>.
                </div>
            </xpath>
            <group name="provider_credentials" position="inside">
                <group attrs="{'invisible': [('code', '!=', 'syriatell12')]}">
<!--                    <field name="test"/>-->
                    <field name="merchant_username_two"/>
                    <field name="merchant_password"/>
                    <field name="mobile"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
